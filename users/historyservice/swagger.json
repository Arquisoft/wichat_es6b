{
    "openapi": "3.0.0",
    "info": {
      "title": "API de Historial de Juegos",
      "version": "1.0.0",
      "description": "Documentación de la API para gestionar el historial de juegos de los usuarios."
    },
    "paths": {
      "/savegame": {
        "post": {
          "summary": "Guarda un nuevo registro de juego.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "username": { "type": "string" },
                    "points": { "type": "number" },
                    "avgtime": { "type": "number" },
                    "questions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": { "correct": { "type": "boolean" } }
                      }
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": { "description": "Registro de juego guardado con éxito." },
            "400": { "description": "Error en la solicitud." }
          }
        }
      },
      "/history/{username}": {
        "get": {
          "summary": "Obtiene el historial de juegos de un usuario.",
          "parameters": [
            {
              "in": "path",
              "name": "username",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": { "description": "Historial de juegos del usuario." },
            "500": { "description": "Error interno del servidor." }
          }
        }
      },
      "/stats/{username}": {
        "get": {
          "summary": "Obtiene estadísticas resumidas de un usuario.",
          "parameters": [
            {
              "in": "path",
              "name": "username",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": { "description": "Estadísticas del usuario." },
            "500": { "description": "Error interno del servidor." }
          }
        }
      }
    }
  }